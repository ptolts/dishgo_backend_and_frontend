worker_processes  1;

error_log  logs/error.log;

events {
    worker_connections  1024;
}


http {
    passenger_root /home/phil/.rvm/gems/ruby-2.1-head/gems/passenger-4.0.48;
    passenger_ruby /home/phil/.rvm/gems/ruby-2.1-head/wrappers/ruby;
    passenger_app_env production;
    passenger_friendly_error_pages off;
    passenger_max_pool_size 6;

    include       mime.types;
    default_type  application/octet-stream;

    set_real_ip_from   10.2.0.0/23;
    real_ip_header X-Forwarded-For;

    access_log  logs/access.log;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    gzip  on;

    server {

        listen  10.2.0.20:80 default_server;
        listen  10.2.1.20:80 default_server;
        listen 162.243.16.245;
        server_name www.dishgo.io dishgo.io;
        root /dishgo/public;
        rails_env production;
        passenger_enabled on;
        passenger_base_uri /;
        passenger_min_instances 4;
        gzip on;
        gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;

        error_page   500 502 503 504  /50x.html;

        client_max_body_size 25m;

        rewrite ^/app$ "/";
        rewrite ^/app(.*)$ $1 last;

        location = /50x.html {
            root   html;
        }

        location ~ ^/business {
            rewrite ^/business(/?.*)$ $1 break;
            root   /dishgo_website;
            index index.html;
        }    

        location ~ ^/public/ {
            rewrite ^/public(/.*)$ $1 break;
            root /dishgo/public;
            break;
        }

        location = /health {
            alias /dishgo_website/alive.txt;
        }        

        location ~ ^/images/ {
          root /dishgo/assets;
          expires 1y;
          add_header Cache-Control public;
          add_header ETag "";
        }

        location ~ ^/assets/ {
          expires 1y;
          add_header Cache-Control public;
          gzip_static on;
          add_header ETag "";
        }

        location ~ /\.git {
                deny all;
        }

    }
}