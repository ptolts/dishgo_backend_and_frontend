					<div class="form-group">
						<div class="controls">
							<div class="input-group input-group-lg">
								<div class="input-group-addon searchSelectorContainer">
									<span class="dropdown-toggle searchDropdownSelector" data-toggle="dropdown"><i class="fa fa-search"></i> <span class="caret"></span></span>
									<ul class="dropdown-menu" role="menu">
										<li><a href="#" data-bind="click: function(){ $root.search_type('dish') }">Search by Dish</a></li>
										<li><a href="#" data-bind="click: function(){ $root.search_type('restaurant') }">Search by Restaurant Name</a></li>
									</ul>
								</div>							
