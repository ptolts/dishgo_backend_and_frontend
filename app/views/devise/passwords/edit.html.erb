	<h2 class="text-center">Change your password</h2>
	<form class="form-horizontal" role="form" id="new_user" method="POST" action="<%= password_path(resource_name) %>">
		<div class="row">
			<div class="col-sm-offset-1 col-sm-10">
				<%= devise_error_messages! %>
			</div>
		</div>
		
		<input name="_method" type="hidden" value="patch" />
		<input name="user[reset_password_token]" type="hidden" value="<%= resource.reset_password_token %>" />
		<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

		<div class="row">
			<div class="col-sm-offset-1 col-sm-10">
				<input autofocus="on" type="password" class="form-control" id="user_password" name="user[password]" placeholder="new password">
			</div>
		</div>

		<div class="row">
			<div class="col-sm-offset-1 col-sm-10">
				<input type="password" class="form-control" id="user_password_confirmation" name="user[password_confirmation]" placeholder="repeat password">
			</div>
		</div>

		<div class="row">
			<div class="col-sm-offset-1 col-sm-10" style="margin-top: 25px">
				<button class="btn btn-success pull-right" type="submit">Change Password<i class="fa fa-chevron-right" style="margin-left: 20px; font-size: 12px;"></i></button>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				<div class="secured">
					<i class="fa fa-lock"></i> Your information is secure with DishGo
				</div>
			</div>
		</div>
	</form>