	<div class="row">
		<h2 class="text-center">Forgot your password?</h2>
		<form class="form-horizontal" role="form" id="sign-up-form" method="post" action="<%= password_path(resource_name) %>">
			<%= devise_error_messages! %>
			<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

			<div class="col-sm-offset-1 col-sm-10">
				<input type="email" class="form-control" id="user_email" name="user[email]" placeholder="Email">
			</div>

			<div class="col-sm-offset-1 col-sm-10" style="margin-top: 25px">
				<button class="btn btn-success pull-right btn-block" type="submit">Send me reset password instructions<i class="fa fa-chevron-right" style="margin-left: 20px; font-size: 12px;"></i></button>
			</div>

			<div class="col-xs-12">
				<div class="secured">
					<i class="fa fa-lock"></i> Your information is secure with DishGo
				</div>
			</div>
		</form>
	</div>