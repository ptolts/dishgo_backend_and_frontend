<p data-bind="lHtml: about_text"></p>

<div class="hours_container">
	<div class="hours col-xs-12 col-md-6 col-md-offset-3">
		<div class="col-xs-3 col-xs-offset-6">
			<h4 class="text-center">Opens</h4>
		</div>

		<div class="col-xs-3">
			<h4 class="text-center">Closes</h4>
		</div>
		<div data-bind="foreach: hours">
			<div class="row">
				<p class="col-xs-6 day_padding"><i class="glyphicon glyphicon-time"></i> <!-- ko text: name --><!-- /ko --></p>

				<div data-bind="visible: !closed()">
					<div class="col-xs-3 text-center">
						<p data-bind="text: open_1"></p>
					</div>

					<div class="col-xs-3 text-center">
						<p data-bind="text: close_1"></p>
					</div>
				</div>

				<div data-bind="visible: closed()">
					<div class="col-xs-6 text-center">
						<span class="label label-danger">Closed</span>
					</div>
				</div>
			</div>		
		</div>
	</div>
</div>
