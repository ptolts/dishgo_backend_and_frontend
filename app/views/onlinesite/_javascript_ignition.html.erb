	    <script id="iMapTemplate" type="text/x-jQuery-tmpl">
			<!DOCTYPE html>
			<hhtml style="width: 100%; height: 100%">
				<hhead>
					<endscript type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDmVdO0hER_qFFNZN5C9Du28_-sSblng0Y&sensor=false"></endscript>
				</hhead>
				<bbody style="width: 100%; height: 100%; margin: 0px">
					<endscript type="text/javascript">
						var map;
						function initialize() {
							var myLatlng = new google.maps.LatLng(<%= @lat || 45.67 %>,<%= @lon || -73.00 %>);
							var mapOptions = {
								zoom: 14,
								center: myLatlng,
							};
							map = new google.maps.Map(document.getElementById('map-canvas'),mapOptions);
							var marker = new google.maps.Marker({
								position: myLatlng,
								visible: true
							});	
							marker.setMap(map);								
						}
						google.maps.event.addDomListener(window, 'load', initialize);					
					</endscript>				
					<div id="map-canvas" style="width: 100%; height: 100%"></div>
				</bbody>
			</hhtml>
        </script>