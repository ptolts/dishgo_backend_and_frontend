			<div class="row">
				<div class="col-xs-12">
					<h1 class="text-center">Sign in to Dish<r>Go</r></h1>
					<hr>
				</div>
			</div>
			<form class="form-horizontal" role="form" id="sign-up-form" method="post" action="<%= session_path(resource_name) %>">
				<div class="row" style="margin-bottom: 0px;">
					<div class="col-sm-10 col-sm-offset-2">
						<%= render 'shared/error_messages' %>
						<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
					</div>
				</div>
				<div class="form-group">
					<label for="user_email" class="col-sm-2 control-label">Email</label>
					<div class="col-sm-10">
						<input type="email" class="form-control" id="user_email" name="user[email]" placeholder="Email">
					</div>
				</div>
				<div class="form-group">
					<label for="user_password" class="col-sm-2 control-label">Password</label>
					<div class="col-sm-10">
						<input type="password" class="form-control" id="user_password" name="user[password]" placeholder="Password">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-5">
						<div class="checkbox">
							<label>
								<input name="user[remember_me]" type="hidden" value="0">
								<input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1">
								Remember me
							</label>
						</div>
					</div>

				</div>
				<div class="form-group">
					<div class="col-sm-10 col-sm-offset-2 text-left">
						<button class="btn btn-success" type="submit">Sign In<i class="fa fa-chevron-right" style="margin-left: 20px; font-size: 12px;"></i></button>
					</div>
					<div class="col-xs-12" style="text-align: right" id="shared_links">
						<%= render "devise/shared/links" %>
					</div>
					<div class="col-xs-12">
						<div class="secured">
							<i class="fa fa-lock"></i> Your information is secure with DishGo
						</div>
					</div>
				</div>
			</form>


