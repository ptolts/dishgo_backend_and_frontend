    <div class="col-md-5 section_section sortable_container col-md-offset-1">
        <div class="dish_top">
            <img src="/app/public/icon@2x.png" width="25" class="icon">
            <div class="language_selector_menu_edit" data-bind="visible: $root.show_lang">
                <select data-bind="options: $root.languages, value: $root.lang"></select>                
            </div>            
            <div class="option_title">
                <span data-bind="click: printJson">Current Section Details</span>      
            </div>                          
            <span class="dish_close_icon glyphicon glyphicon glyphicon-remove" data-bind="click: $root.current_menu().remove"></span>                        
        </div>                        
        <div class="dish">
            <div class="col-xs-12 push_down">
                <div class="col-xs-12" style="text-align: left">
                    <label>Section Title</label>
                    <input data-bind="lValue: name, valueUpdate: 'afterkeydown', helperTip: {template:'section_name_help_template', when: $root.current_menu().firstSectionNameHelp}" class="form-control col-xs-12 dish_name tooltipclass" data-toggle="tooltip" data-placement="top" title="Type the section name into this box." placeholder="Add Section Title"/>
                    <script id="section_name_help_template" type="text/x-jQuery-tmpl">
                        <div class="fixed_helper_container">
                            <div class="helper_container">
                                <span class="glyphicon glyphicon-play helper_arrow"></span>
                                <h4>Type the name of the section you would like to start with here.</h4>
                            </div>
                        </div>
                    </script>                      
                </div>
                <div class="col-xs-12 push_down">
                    <textarea rows="6" data-bind="lValue: description, valueUpdate: 'afterkeydown'" class="description form-control tooltipclass" data-toggle="tooltip" data-placement="top" title="Type a section description into this box. It isn't required." placeholder="Add Section Description (Optional)."></textarea>
                </div>                  
            </div>
        </div>
        <div class="col-md-12" data-bind="visible: dishes().length > 0">
            <h4>Dish Order:</h4>          
            <ul class="sortable_dishes" data-bind="sortable { template: 'dish_tmp', data: dishes, options: { containment: 'parent', tolerance: 'pointer' } }"></ul>
            <script id="dish_tmp" type="text/html"><li class="dish_sort" data-bind="click: function(){ console.log($data.position()); }"><span class="pull-left fa fa-arrows-v"></span><span data-bind="lText: name"></span></li></script>               
        </div>        
    </div>

    <div class="col-md-5 col-md-offset-1 section_section sortable_container" data-bind="visible: $root.current_menu().menu().length > 1">
        <div class="sortable_top">
            <img src="/app/public/icon@2x.png" width="25" class="icon">
            <div class="option_title">
                <span>Reorder Sections</span>      
            </div>                                                 
        </div>
        <div class="col-xs-12">
            <h2>Drag and Drop to Reorder</h1>
        </div>
        <div class="col-md-12">
            <h4>Section Order:</h4>
            <ul class="sortable_sections" data-bind="sortable:  { template: 'section_tmp', data: $root.current_menu().menu, options: { containment: 'parent', tolerance: 'pointer' } }"></ul>
            <script id="section_tmp" type="text/html"><li class="section_sort" data-bind="click: function(){ console.log($data.position()); }"><span class="pull-left fa fa-arrows-v"></span><span data-bind="lText: name"></span></li></script>              
        </div>
    </div>