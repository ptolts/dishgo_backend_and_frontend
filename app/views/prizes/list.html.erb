                                <div class="col-xs-8 text-left">
                                    <p class="coupon_name" data-bind="lText: name"></p>
                                </div>
                                <div class="col-xs-4 text-right">
                                    <i class="fa fa-usd" style="font-size: 16px;" data-bind="text: amount"></i>
