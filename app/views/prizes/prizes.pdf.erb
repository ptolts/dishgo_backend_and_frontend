<style>
/* \/\/\/\/\/\/\/ DONT TOUCH BELOW \/\/\/\/\/\/\/\/ */
body {
	margin: 0;
	padding: 0;
	background-color: black;
	font: 12pt "Tahoma";
}
* {
	box-sizing: border-box;
	-moz-box-sizing: border-box;
}
.document {
	background: white;
/*	border: 1px #DCDCDC solid;*/
	width: 216mm;
	height: 279mm;
	display: block;
	margin: 0 auto;
	padding-bottom: 15.16mm;
	padding-top: 15.16mm;
	/*text-align: center;*/
}
.prize {
	height: 50.8mm;
	width: 50.8mm;
	float: left;
	margin-left: 15.9mm;
	margin-bottom: 15.16mm;
	position: relative;
/*	border: 1px #DCDCDC solid;*/
}
/* ^^^^^^^^^^^^ DONT TOUCH ABOVE  ^^^^^^^^^^^^^^^ */
.number {
	position: absolute;
	left: 10px;
	top: 10px;
	font-size: 28px;
}
.token_cell {
	position: absolute;
	top: 60%;
	right: 25px;
	left: 0;
	text-align: center;
}
.token {
	position: relative;
	margin: 0 auto;
	width: 100%;
}
.name_cell {
	position: absolute;
	top: 15%;
	left: 0;
	right: 0;
	text-align: center;
}
.name_cell h3 {
	font-size: 18px;
}
.dates_cell {
	position: absolute;
	bottom: 10px;
	left: 0;
	right: 0;
	text-align: center;
}
.dates_cell h4 {
	margin: 0;
}
.token:after{
	position: absolute;
	content: " ";
	width: 30px;
	height: 30px;
	top: -5px;
	right: -5px;	
	border: 1px solid black;
}
.logo {
	position: absolute;
	top: 8%;
	left: 45px;
	height: 25px;
}
.value_cell {
	position: absolute;
	top: 38%;
	right: 25px;
	left: 0;
	text-align: center;
	color: #cf2f28;
}
</style>

<div class="document">
	<% @prize.individual_prizes.each do |individual_prize| %>
		<div class="prize">
			<div class="number"><%= individual_prize.number %></div>
			<img class="logo" src="https://58900edd332817a2d530-6caa6fe89e7dac3eaf12230f0985b957.ssl.cf5.rackcdn.com/DishGo-black-red_small.jpg">
			<div class="name_cell">
				<h3 class="name"><%= @prize.name_translations["en"] %></h3>
			</div>
			<div class="value_cell">
				<h3>$<%= @prize.amount %></h3>
			</div>
			<div class="token_cell">
				<h3 class="token"><%= individual_prize.prize_token[0...-1] %></h3>
			</div>
			<div class="dates_cell">
				<h4>From: <%= @prize.start_date.strftime("%m/%d/%Y") %></h4>
				<h4>To: <%= @prize.end_date.strftime("%m/%d/%Y") %></h4>
			</div>			
		</div>
	<% end %>
</div>