<script id="custom_carousel_image" type="text/html">
    <div class="col-xs-12 col-md-4"> 
        <div class="thumbnail col-xs-12">
            <!-- ko if: !fresh() -->        
                <div data-bind="visible: !failed()">
                    <div class="uploading_image" data-bind="visible: !completed()">
                        <div class="col-xs-10 col-xs-offset-1">
                            <div class="progress" style="height: 10px">
                                <div class="progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" data-bind="style: { width: progressValue() + '%'}"></div>
                            </div>    
                        </div> 
                    </div> 
                    <div class="completed_image" data-bind="visible: completed">
                        <div class="col-xs-12 text-center">
                            <div class="thumbnail">
                                <img class="img-rounded" data-bind="attr: {src: url}" />
                            </div>
                        </div>
                    </div> 
                </div>
                <div data-bind="visible: failed()">
                    <div class="alert alert-warning alert-dismissable text-center">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                      <strong>Warning!</strong> There was a problem processing your image. Please contact support.
                    </div>                
                </div>
            <!-- /ko -->
            <div class="caption">
                <!-- ko if: fresh() -->        
                    <span class="btn btn-block btn-section btn-default file_upload_button col-xs-6">
                        <i class="glyphicon glyphicon-picture"></i>
                        <span>Upload Image</span>
                        <!-- The file input field used as target for the file upload widget -->
                        <input data-bind="file_upload_global_customize" id="fileupload" type="file" name="files"  class="file_upload_input" accept="images/*" capture="camera">
                    </span>                                                                                     
                <!-- /ko --> 
                <!-- ko if: !fresh() -->        
                    <button data-bind="click:$parent.destroyImage" class="btn btn-warning col-xs-12">Remove</button>
                <!-- /ko -->                 
            </div>            
        </div>
    </div>
</script> 

<script id="restaurant_logo" type="text/html">
    <div class="col-xs-12 col-md-6" data-bind="with: logo"> 
        <div class="thumbnail col-xs-12">
            <!-- ko if: !fresh() -->        
                <div data-bind="visible: !failed()">
                    <div class="uploading_image" data-bind="visible: !completed()">
                        <div class="col-xs-10 col-xs-offset-1">
                            <div class="progress" style="height: 10px">
                                <div class="progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" data-bind="style: { width: progressValue() + '%'}"></div>
                            </div>    
                        </div> 
                    </div> 
                    <div class="completed_image" data-bind="visible: completed">
                        <div class="col-xs-12 text-center">
                            <div class="thumbnail">
                                <img class="img-rounded" data-bind="attr: {src: url}" />
                            </div>
                        </div>
                    </div> 
                </div>
                <div data-bind="visible: failed()">
                    <div class="alert alert-warning alert-dismissable text-center">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                      <strong>Warning!</strong> There was a problem processing your image. Please contact support.
                    </div>                
                </div>
            <!-- /ko -->
            <div class="caption">        
                <span class="btn btn-block btn-section btn-default file_upload_button col-xs-6">
                    <i class="glyphicon glyphicon-picture"></i>
                    <span data-bind="text: computedImageUpload">Upload Image</span>
                    <!-- The file input field used as target for the file upload widget -->
                    <input data-bind="file_upload_logo" id="fileupload" type="file" name="files"  class="file_upload_input" accept="images/*" capture="camera">
                </span>                                                                                                   
            </div>            
        </div>
    </div>
    <div class="col-xs-12 col-md-6" data-bind="visible: logo().completed, with: logo_settings"> 
        <div class="row">
            <div class="col-xs-12">
                <h3>Do you want your logo to appear at the top?</h3>
                <div class="onoffswitch">
                    <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" data-bind="checked: logo_as_image">
                    <label class="onoffswitch-label" for="myonoffswitch">
                        <div class="onoffswitch-inner"></div>
                        <div class="onoffswitch-switch"></div>
                    </label>
                </div>
            </div>
        </div>
        <div class="row" data-bind="if: logo_as_image">
            <div class="col-xs-12">
                <h3>Size</h3>
                <div data-bind="slider: [image_height,50,250]"></div>
                <h3>Border Size</h3>
                <div data-bind="slider: [border_size,0,10]"></div>
                <div class="row">
                    <h3 class="col-xs-6">Border Color</h3>
                    <div class="colorpicker_box col-xs-6" data-bind="colorpicker: border_color"></div>                
                </div>                
                <h3>Round Corners</h3>
                <div data-bind="slider: [border_radius,0,150]"></div>
            </div>
        </div>        
    </div>
</script> 

