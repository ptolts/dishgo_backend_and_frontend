<script id="pick_design_template" type="text/html">
    <div class="col-md-6 col-xs-12">
        <div class="design_form_wrapper">
            <h2 class="text-center">Menu Design:</h2>
            <hr>
            <!-- ko with: design --> 
                <h4>Current Design: <span data-bind="text: name"></span></h4>
            <!-- /ko -->
            <div class="form-group">
                <label>Select Your Design</label>
                <select class="form-control" data-bind="
                                    options: $root.designs, 
                                    optionsText: 'name',
                                    value: design,
                                    optionsCaption: 'Choose...'
                                    "></select>  
                <button class="btn btn-primary" data-bind="click: saveDesign">Set Design</button>
            </div>
        </div>
    </div>
</script>

<script id="create_design_template" type="text/html">
    <div class="col-xs-12 jumbotron">
    	<h3 data-bind="text: $root.designFormTitle"></h3>
