<script id="design_image" type="text/html">
    <div class="col-xs-12 push_down design_image_box">
        <div class="col-md-12 form">
            <div class="row">
                <h3>Image Properties: [<span data-bind="text: id"></span>]</h3>
                <div class="col-xs-6">
                    <div class="row">
                        <div class="col-xs-12">
                            <label>Name: </label><input class="form-control" data-bind="value: name" />
                        </div>                                
                    </div>                                
                    <div class="row">
                        <div class="col-xs-12">
                            <label>Description: </label><input class="form-control" data-bind="value: description" />
                        </div>                       
                    </div> 
                    <div class="row">
                        <div class="col-xs-12">
                            <button class="btn btn-warning" data-bind="click: $parent.destroyImage">Destroy</button>
                            <label>Customizable: </label><input type="checkbox" data-bind="checked: customizable" />
                        </div>                       
                    </div>                       
                </div>
            </div>
        </div> 

        <!-- ko foreach: global_images -->
            <div class="col-md-4 col-xs-12">
                <div class="thumbnail col-xs-12">
                    <!-- ko if: !fresh() -->        
                        <div data-bind="visible: !failed()">
                            <div class="uploading_image" data-bind="visible: !completed()">
                                <div class="col-xs-10 col-xs-offset-1">
                                    <div class="progress" style="height: 10px">
                                        <div class="progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" data-bind="style: { width: progressValue() + '%'}"></div>
                                    </div>    
                                </div> 
                            </div> 
                            <div class="completed_image" data-bind="visible: completed">
                                <div class="col-xs-12 text-center actual_image">
                                    <div class="thumbnail">
                                        <img class="img-rounded" data-bind="attr: {src: url}" />
                                    </div>
                                </div>
                            </div> 
                        </div>
                        <div data-bind="visible: failed()">
                            <div class="alert alert-warning alert-dismissable text-center">
                              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                              <strong>Warning!</strong> There was a problem processing your image. Please contact support.
                            </div>                
                        </div>
                    <!-- /ko -->
                    <div class="caption">
                        <div class="row">
                            <div class="col-xs-6">
                                <span class="btn btn-block btn-section file_upload_button col-xs-6">
                                    <span data-bind="text: computedImageUpload">Upload Image</span>
                                    <input data-bind="file_upload_global" id="fileupload" type="file" name="files"  class="file_upload_input" accept="images/*" capture="camera">
                                </span>
                            </div>   
                            <div class="col-xs-6" data-bind="visible: completed">
                                <button class="btn btn-warning pull-right" data-bind="click: $parent.destroyImage">Destroy Image</button>
                            </div>   
                        </div>                        
                        <div class="row">
                            <div class="col-xs-12" data-bind="css: {'has-error':!template_location()}">
                                <h4>CSS Template:</h4>
                                <select class="form-control" data-bind="options: $root.image_templates, value: template_location, optionsCaption: 'Choose Folder'"></select>
                            </div>   
                        </div>   
                    </div>                   
                </div>               
            </div>               
        <!-- /ko --> 
    </div>
</script> 

