<script id="create_design_template" type="text/html">
    <div class="col-xs-12 jumbotron">
    	<h3 data-bind="text: $root.designFormTitle"></h3>
        <p>
            <input class="form-control" data-bind="value: name" />
        </p>

        <h4>CSS:</h4>

        <textarea rows="50" data-bind="value: css, codemirror: { lineNumbers: true, matchBrackets: true, mode: 'text/css', theme:'lesser-dark', value:css }" placeholder="Design Specific CSS." style="width: 100%"></textarea>

        <p></p>

        <h4>Menu CSS:</h4>

        <textarea rows="50" data-bind="value: menu_css, codemirror: { lineNumbers: true, matchBrackets: true, mode: 'text/css', theme:'lesser-dark', value:menu_css }" placeholder="Menu Specific CSS." style="width: 100%"></textarea>

        <p></p>
        <h4>Static Images</h4>

        <div data-bind="template: { name: 'design_image', foreach: global_images}"></div>

        <button class="btn btn-info" data-bind="click: addImage">Upload Image</button>  

        <hr><p></p>
        <h4>Carousel Images</h4>

        <div data-bind="template: { name: 'carousel_image', foreach: carousel}"></div>

        <button class="btn btn-info" data-bind="click: addCarousel">Upload Image</button>  

        <hr><p></p>        


        <button class="btn btn-warning pull-left" data-bind="visible: new_design,click: $root.destroyDesign">Destroy</button>
        <button class="btn btn-primary pull-right" data-bind="click: $root.updateDesign, text: $root.createNewDesignButton">Create</button>
    </div>
</script>